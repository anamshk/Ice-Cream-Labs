<!DOCTYPE html>
<html lang="en">

<head>
  <title>Edit</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/styles/variables.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <h1></h1>
  <main>
    <form method="POST" action="/admin/admin_add">
      <div class="form-group">
        <label for="itemName">Item Name</label>
        <input name="title" class="form-control" id="itemName" placeholder="">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input name="description" class="form-control" id="description" placeholder="">
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        <input name="price" class="form-control" id="price" placeholder="">
      </div>
      <div class="form-group">
        <label for="inventory">Inventory</label>
        <input name="inventory" class="form-control" id="inventory" placeholder="">
      </div>
      <div class="form-group">
        <label for="photo_url">Photo Url</label>
        <input name="photo_url" class="form-control" id="photo_url" placeholder="">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <form method="POST" action="/item/:id/delete">
      <button type="delete" class="btn btn-primary">Delete this item</button>
    </form>
  </main>
</body>

</html>