<!DOCTYPE html>
<html lang="en">

<head>
  <title>Orders in queue</title>
  <nav>
    <%- include('partials/_header-admin') %>
  </nav> 

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body class="admin"> 
  <h1>Orders in queue</h1>
  <p id="small-link"><a href="../admin">back</a></p>
  <% for(let order in orders) { %>
    <h2>Order # <%=orders[order].details.id %></h2>
    <tr>
      <h3>Customer: <%= orders[order].details.name %> |  <%= orders[order].details.phone_number %></h3>
      <p>
        Ordered at: <%= orders[order].details.order_datetime %></td></newline>
        <% for(let item of orders[order].items) { %>
          Ordered: <%= item.title %>  | Qty: <%= item.quantity%> | Price: <%= item.price %><br>
          <% } %>
      </p>
      <form class="form-inline" action="/admin/order/<%= orders[order].details.id %>" method="GET">
        <button type="submit" class="btn btn-primary">View Order</button>
      </form>
      <form class="form-inline" action="/admin/order/<%= orders[order].details.id %>/update" method="POST">
        <button type="submit" class="btn btn-primary">Completed</button>
      </form>
    </div>

  <% } %>
  
</body>
</html>